<?xml version="1.0" encoding="utf-8"?>
<com.milog.test.myfloat.FloatView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <View
        android:id="@+id/view"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/float_shape"
        android:clickable="true"
        />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:background="@drawable/common_dialog_one_btn_background"
        android:text="@string/start"
        android:textSize="@dimen/text_font_size_large"
        android:visibility="gone"
        />

</com.milog.test.myfloat.FloatView>